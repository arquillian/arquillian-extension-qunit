<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://jboss.org/schema/arquillian"
    xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <!-- Sets the protocol which is how Arquillian talks and executes the tests inside the container. -->
    <defaultProtocol type="Servlet 3.0" />

    <!-- Configuration to be used when the arq-jbossas-remote profile is active -->
    <container qualifier="jbossas-remote-7">
        <configuration>
            <property name="managementAddress"></property>
            <property name="managementPort"></property>
            <property name="username"></property>
            <property name="password"></property>
        </configuration>
    </container>

    <!-- Configuration to be used when the arq-jbossas-managed-7 profile is active -->
    <container qualifier="jboss-managed-7" default="true">
        <configuration>
            <property name="jbossHome">${basedir}/target/jboss-as-7.1.1.Final</property>
        </configuration>
    </container>

    <extension qualifier="webdriver">
        <property name="browserCapabilities">firefox</property>
    </extension>

</arquillian>